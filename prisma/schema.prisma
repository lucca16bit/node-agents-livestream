generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model rooms {
  id           String         @id @default(uuid())
  name         String
  description  String?
  createdAt    DateTime       @default(now())
  audio_chunks audio_chunks[]
  questions    questions[]

  @@map("rooms")
}

model questions {
  id        String   @id @default(uuid())
  question  String
  answer    String?
  createdAt DateTime @default(now())
  roomId    String
  room      rooms    @relation(fields: [roomId], references: [id])

  @@map("questions")
}

model audio_chunks {
  id            String                @id @default(uuid())
  transcription String
  roomId        String
  embeddings    Unsupported("vector")
  room          rooms                 @relation(fields: [roomId], references: [id])

  @@map("audio_chunks")
}
